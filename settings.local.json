{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "date +%s > /tmp/claude_session_start.txt"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_TYPE=git_commit bash \"$HOME/.claude/hooks/session-memory.sh\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_TYPE=session_end bash \"$HOME/.claude/hooks/session-memory.sh\""
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(git clone:*)",
      "Bash(npm install)",
      "Bash(sudo npm install:*)",
      "Bash(npm cache clean:*)",
      "Bash(npm install:*)",
      "Bash(claude mcp add-from-claude-desktop:*)",
      "Bash(claude mcp add basecamp:*)",
      "Bash(claude mcp add:*)",
      "Bash(basecamp-mcp-server:*)",
      "Bash(claude mcp:*)",
      "Bash(chmod:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "mcp__basecamp__basecamp_list_projects",
      "mcp__zoho-desk__zoho_list_tickets",
      "mcp__zoho-desk__zoho_get_ticket",
      "mcp__zoho-desk__zoho_reply_ticket",
      "mcp__zoho-desk__zoho_add_ticket_comment",
      "mcp__zoho-desk__zoho_update_ticket",
      "mcp__basecamp__basecamp_read",
      "Bash(brew install:*)",
      "Bash(composer global config:*)",
      "Bash(composer global require:*)",
      "Bash(phpcs:*)",
      "Bash(export PATH=\"$HOME/.composer/vendor/bin:$PATH\")",
      "Bash(echo:*)",
      "Bash(timeout 3 node:*)",
      "Bash(cat:*)",
      "Bash(npx @verygoodplugins/mcp-automem:*)",
      "Bash(mkdir:*)",
      "Bash(python3:*)",
      "Bash(curl:*)",
      "Bash(open \"https://github.com/settings/tokens?type=beta\")",
      "Bash(npx:*)",
      "WebSearch",
      "Bash(sudo chown:*)",
      "Bash(npm search:*)",
      "Bash(claude plugin marketplace:*)",
      "Bash(claude plugin list:*)",
      "Bash(claude plugin:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "mcp__filesystem__directory_tree",
      "mcp__github__get_file_contents",
      "Bash(git pull:*)",
      "Bash(rsync:*)",
      "mcp__basecamp__basecamp_list_cards",
      "mcp__fetch__fetch_html",
      "mcp__zoho-desk__zoho_list_ticket_comments",
      "mcp__fetch__fetch_markdown",
